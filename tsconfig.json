{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "lib": ["dom", "es6"],
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [ "./src/*" ]
}
